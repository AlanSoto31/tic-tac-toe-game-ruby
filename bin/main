#!/usr/bin/env ruby

require_relative '../lib/logic.rb'

grid = Grid.new
printings = Strings.new

puts "Welcome to Tic Tac Toe"
puts printings.rules
puts grid.display_grid

inputs = Players.new

print "Do you want to play (Y/N)..."
user_answer = gets.chomp
inputs.check_answer(user_answer)

while $game_on == true
  n = 1
  while n <=2

      if grid.draw == true
        p "It's a DRAW"
        $game_on = false
        return
      end

      print "Player #{n} select one option available in the grid... " 
      user_input = gets.chomp.to_i

      if inputs.check_input(user_input) == true && grid.position_chosen(user_input) == true
        
        grid.assigning_marks(user_input, n)
        puts grid.display_grid
        n += 1

      else print "This option is invalid, " 

      end
  end

end