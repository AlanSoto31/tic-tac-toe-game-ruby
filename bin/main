#!/usr/bin/env ruby

p 'Welcome to Tic Toc Toe'

puts [' 1 ' '|' ' 2 ' '|' ' 3 ']
puts ['------------']
puts [' 4 ' '|' ' 5 ' '|' ' 6 ']
puts ['------------']
puts [' 7 ' '|' ' 8 ' '|' ' 9 ']
game_on = true
position_taken = false
while game_on
  n = 1
  while n <= 2
    print "Player #{n} is your turn please choose a place in the board... "
    input = gets.chomp
    if input == '7'
      position_taken = true
      print 'Sorry this move is not valid, '
      p "please select another place"

    elsif input == '8'
      puts "It's a DRAW"
      game_on = false
      return
    elsif input == '9'
      puts "Player #{n} Wins"
      game_on = false
      return

      else
      puts [' 1 ' '|' ' 2 ' '|' ' 3 ']
      puts ['------------']
      puts [' 4 ' '|' ' 5 ' '|' ' 6 ']
      puts ['------------']
      puts [' 7 ' '|' ' 8 ' '|' ' 9 ']
      n += 1
    end
   
  end
  
end

